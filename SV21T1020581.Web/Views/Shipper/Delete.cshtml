@model Shipper
@{
    ViewBag.Title = "Xoa don vi van chuyen";
}



<div class="box box-danger">
    <div class="box-body">
        <form action="~/Shipper/Delete/@Model.ShipperID" method="post">
            <div class="form-group">
                <label>Tên đơn vị vận chuyển: </label>
                <p class="form-control-static form-control">@Model.ShipperName</p>
            </div>

            <div class="form-group">
                <label>Số điện thoại: </label>
                <p class="form-control-static form-control">@Model.Phone</p>
            </div>


            <div class="form-group text-right">
                @if (!SV21T1020581.BusinessLayers.CommonDataService.InUsedShipper(Model.ShipperID))
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i>Xoá dữ liệu
                    </button>
                }
                <a href="~/Shipper" class="btn btn-default">
                    Quay lại
                </a>

            </div>
        </form>

    </div></>
</div>
