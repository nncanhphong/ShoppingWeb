@model Customer
@{

}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <!-- Form Card -->
    <div class="card shadow-lg border-0 rounded-3" style="max-width: 800px; width: 100%;">
        <div class="card-header bg-primary text-white text-center">
            <h5 class="mb-0">Thông Tin Khách Hàng</h5>
        </div>
        <div class="card-body p-4">
            <form action="~/Account/Save" method="post">
                <!-- Hidden Input for Customer ID -->
                <input type="hidden" name="@nameof(Model.CustomerID)" value="@Model.CustomerID" />

                <!-- Form Grid -->
                <div class="row g-3">
                    <!-- Customer Name -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Tên khách hàng</label>
                        <input type="text" class="form-control" name="@nameof(Model.CustomerName)"
                               value="@Model.CustomerName" placeholder="Nhập tên khách hàng" autofocus />
                        @Html.ValidationMessage(nameof(Model.CustomerName), new { @class = "text-danger small" })
                    </div>

                    <!-- Contact Name -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Tên liên hệ</label>
                        <input type="text" class="form-control" name="@nameof(Model.ContactName)"
                               value="@Model.ContactName" placeholder="Nhập tên liên hệ" />
                        @Html.ValidationMessage(nameof(Model.ContactName), new { @class = "text-danger small" })
                    </div>

                    <!-- Province -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Tỉnh thành</label>
                        <select class="form-select" name="@nameof(Model.Province)">
                            <option value="">--Chọn tỉnh thành--</option>
                            @foreach (var item in SV21T1020581.BusinessLayers.CommonDataService.ListOfProvinces())
                            {
                                if (item.ProvinceName == Model.Province)
                                {
                                    <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                                }
                                else
                                {
                                    <option value="@item.ProvinceName">@item.ProvinceName</option>
                                }
                            }
                        </select>
                        @Html.ValidationMessage(nameof(Model.Province), new { @class = "text-danger small" })
                    </div>

                    <!-- Address -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Địa chỉ</label>
                        <input type="text" class="form-control" name="@nameof(Model.Address)"
                               value="@Model.Address" placeholder="Nhập địa chỉ" />
                        @Html.ValidationMessage(nameof(Model.Address), new { @class = "text-danger small" })
                    </div>

                    <!-- Phone -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Số điện thoại</label>
                        <input type="number" class="form-control" name="@nameof(Model.Phone)"
                               value="@Model.Phone" placeholder="Nhập số điện thoại" />
                        @Html.ValidationMessage(nameof(Model.Phone), new { @class = "text-danger small" })
                    </div>

                    <!-- Email -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Email</label>
                        <input type="email" class="form-control" name="@nameof(Model.Email)"
                               value="@Model.Email" placeholder="Nhập email" />
                        @Html.ValidationMessage(nameof(Model.Email), new { @class = "text-danger small" })
                    </div>
                </div>

                <!-- Form Buttons -->
                <div class="d-flex justify-content-center gap-3 mt-4">
                    <button type="submit" class="btn btn-primary px-4 py-2">
                        <i class="bi bi-save me-1"></i>Lưu dữ liệu
                    </button>
                    <a href="~/Home" class="btn btn-secondary px-4 py-2">
                        <i class="bi bi-arrow-left me-1"></i>Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
