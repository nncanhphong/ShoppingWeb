<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SV21T1020581.Shop</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SV21T1020581.Shop.styles.css" asp-append-version="true" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    @RenderSection("styles", false)
</head>

<body>
    <!-- Header -->
    @{
        await Html.RenderPartialAsync("_Header");
     }

    <!-- Main Content -->
    <main class="container py-4">
        <header class="mb-4">
            <h1 class="display-5 fw-bold">
                @ViewBag.Title
            </h1>
        </header>

        <!-- Page-Specific Content -->
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-center py-3 mt-4 border-top">
        <p class="mb-0 text-muted">© 2024 SV21T1020581.Shop. All rights reserved.</p>
    </footer>

    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap Bundle with Popper -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.sidebar-menu').tree();
            $('.date-picker').datepicker({
                autoclose: true,
                format: "dd/mm/yyyy"
            });
            $('.daterange-picker').daterangepicker({
                locale: {
                    format: 'DD/MM/YYYY'
                }
            });
            $('.select2').select2();

            $('.number-separator').inputmask({
                alias: "numeric",
                groupSeparator: ",",       // Dấu phẩy phân cách phần nghìn
                autoGroup: true,           // Tự động thêm dấu phân cách
                digits: 0,                 // Không có chữ số thập phân
                removeMaskOnSubmit: true   // Loại bỏ ký tự phân cách phần nghìn khi submit form
            });
        })
    </script>

    <!-- Custom JavaScript -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("scripts", false)
</body>

</html>
