<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop Navigation</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        /* Custom Dropdown Styling */
        .dropdown-menu {
            margin-top: 0; /* Align dropdown properly */
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand text-primary" href="#">SV21T1020581</a>

                <!-- Mobile Menu Toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation Links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <!-- Home -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="~/Home/Index">Trang chủ</a>
                        </li>

                        <!-- Store -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="~/Product/Index">Cửa hàng</a>
                        </li>

                        <!-- Orders -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="~/Order/OrderStatus">Lịch sử</a>
                        </li>

                        <!-- Account Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="accountDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Tài khoản
                            </a>
                            <ul class="dropdown-menu shadow-sm" aria-labelledby="accountDropdown">
                                @if (User.GetUserData() == null)
                                {
                                    <li><a class="dropdown-item" href="~/Account/Login">Đăng nhập</a></li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" href="~/Account/Login">@User.GetUserData()?.UserName</a></li>
                                    <li><a class="dropdown-item" href="~/Account/Edit/@User.GetUserData()?.UserId">Đổi thông tin cá nhân</a></li>
                                    <li><a class="dropdown-item" href="~/Account/ChangePassword/@User.GetUserData()?.UserId">Đổi mật khẩu</a></li>
                                    <li><a class="dropdown-item text-danger" href="~/Account/Logout">Đăng xuất</a></li>
                                }
                                
                            </ul>
                        </li>

                        <!-- Cart -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="~/Order/ShoppingCart" aria-label="Shopping Cart">
                                <i class="bi bi-cart fs-4"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
